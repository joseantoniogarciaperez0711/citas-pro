<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirigir a www
    RewriteCond %{HTTP_HOST} !^www\. [NC]
    RewriteRule ^(.*)$ http://www.%{HTTP_HOST}/$1 [R=301,L]

    # Excepci√≥n para el archivo artisan_link.php
    RewriteCond %{REQUEST_URI} !^/artisan_link\.php$

    # URL amigables de Laravel
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
